@model IEnumerable<Restaurent.Models.SubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>

    </div>
    <br />
    <div id="subcategory">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Category.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Category.Name)
                        </td>
                        <td>
                            <partial name="_TableButtons" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Sub Category exists...</p>
        }
    </div>
    <br />
    <button type="button" class="btn btn-success printtable">Print </button>
</div>


@section scripts
    {
    <script>
        $(function () {
            $(".printtable").click(function () {
                var restorepage = document.body.innerHTML;
                var printcontent = document.getElementById("subcategory").innerHTML;
                document.body.innerHTML = printcontent;
                window.print();
                document.body.innerHTML = restorepage;
            });


        });

    </script>
}